{
  "name": "wsk",
  "version": "1.0.0",
  "description": "Web starter kit for simple web font-end development.",
  "repository": "laozhu/wsk",
  "license": "MIT",
  "main": "./src/index.js",
  "@std/esm": "js",
  "author": {
    "name": "Ritchie Zhu",
    "email": "laozhu.me@gmail.com",
    "url": "https://laozhu.me"
  },
  "scripts": {
    "start": "yarn clean && yarn build:dll && yarn build && yarn mock",
    "dev": "cross-env NODE_ENV=development webpack -w -d --bail",
    "wds": "cross-env NODE_ENV=development webpack-dev-server -d --bail",
    "build": "cross-env NODE_ENV=production webpack -p --bail",
    "build:dll": "cross-env NODE_ENV=dll webpack -p --bail",
    "eslint": "eslint src webpack.config.js --ext .js,.html --cache && exit 0",
    "eslint:fix": "eslint src webpack.config.js --ext .js,.html --cache --fix && exit 0",
    "stylelint": "stylelint 'src/**/*.css' && exit 0",
    "stylelint:fix": "stylelint 'src/**/*.css' --fix && exit 0",
    "imagemin": "open -a ImageOptim ./src/{images,assets}",
    "mock": "json-server -w ./src/data/db.json -s ./dist -r ./src/data/_routes.json -m ./src/data/_middlewares.js",
    "clean": "rimraf dist",
    "bundlesize": "bundlesize",
    "browserslist": "browserslist",
    "ngrok": "ngrok http 8080"
  },
  "engines": {
    "node": ">= 9.0.0",
    "yarn": ">= 1.0.0"
  },
  "browserslist": [
    "> 1% in CN",
    "last 3 versions",
    "Firefox ESR",
    "not ie <= 8",
    "not bb 7-10",
    "not op_mini all"
  ],
  "bundlesize": [
    {
      "path": "./dist/js/*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/css/*.css",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/img/*.{png,jpg,jpeg,gif,webp,svg}",
      "maxSize": "100 kB"
    },
    {
      "path": "./dist/fonts/*.{eot,ttf,otf,woff,woff2,svg}",
      "maxSize": "100 kB"
    }
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "loose": true,
          "debug": false,
          "modules": false,
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-normalize": {},
      "postcss-cssnext": {},
      "css-mqpacker": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb-base",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "no-console": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "compat/compat": "error"
    },
    "plugins": [
      "compat",
      "html",
      "import"
    ]
  },
  "eslintIgnore": [
    "dist"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-concentric-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "order/order": [
        "custom-properties",
        "declarations",
        "rules",
        "at-rules"
      ],
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "flexbox",
            "rem",
            "word-break",
            "wordwrap",
            "css-media-resolution",
            "kerning-pairs-ligatures",
            "font-unicode-range"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@std/esm": "0.24.0",
    "add-asset-html-webpack-plugin": "^2.1.3",
    "babel-eslint": "^8.2.2",
    "babel-loader": "8.0.0-beta.0",
    "browserslist": "^3.1.1",
    "bundlesize": "^0.16.0",
    "copy-webpack-plugin": "^4.5.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.10",
    "css-mqpacker": "^6.0.2",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-exclude-assets-plugin": "^0.0.6",
    "html-webpack-plugin": "^3.0.4",
    "json-server": "^0.12.1",
    "postcss": "^6.0.19",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^2.1.1",
    "postcss-normalize": "^4.0.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.20.2",
    "stylelint": "^9.1.1",
    "stylelint-config-concentric-order": "^3.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-unsupported-browser-features": "^2.0.0",
    "stylelint-order": "^0.8.1",
    "svg-url-loader": "^2.3.1",
    "url-loader": "1.0.1",
    "webpack": "4.0.1",
    "webpack-cli": "2.0.10",
    "webpack-dev-server": "^3.1.0",
    "webpack-manifest-plugin": "^2.0.0-rc.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.40",
    "axios": "^0.18.0"
  }
}
